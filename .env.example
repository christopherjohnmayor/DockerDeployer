# Application Settings
ENVIRONMENT=development  # development, staging, production

# Domain Configuration
DOMAIN=example.com  # Your domain name for production

# Security
SECRET_KEY=your_secret_key_here  # Generate a secure random key

# Database
DATABASE_URL=sqlite:///./data/dockerdeployer.db

# Docker Configuration
CONFIG_REPO_PATH=/app/config_repo

# CORS Settings
CORS_ORIGINS=http://localhost:3000,https://example.com

# LLM Configuration
LLM_PROVIDER=ollama  # ollama, litellm, openrouter
LLM_API_URL=http://localhost:11434/api/generate
LLM_API_KEY=
OPENROUTER_API_URL=https://openrouter.ai/api/v1/chat/completions
OPENROUTER_API_KEY=

# Email Configuration
EMAIL_PROVIDER=sendgrid  # sendgrid, gmail
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME=DockerDeployer

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=

# Gmail Configuration (if using Gmail)
GMAIL_USERNAME=
GMAIL_PASSWORD=  # Use App Password for Gmail
GMAIL_SMTP_HOST=smtp.gmail.com
GMAIL_SMTP_PORT=587

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# Docker Image Tags (for production)
BACKEND_TAG=latest
FRONTEND_TAG=latest
